<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="UTF-8">
    <title>Inspekcja kształtu</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .thumbnail {
            max-width: 150px;
            margin: 5px;
        }
        .current-img {
            max-height: 400px;
            border: 1px solid #ccc;
        }
    </style>
</head>
<body class="container py-4">
    <h1 class="mb-4">Inspekcja kształtu</h1>

    <h2>Ostatnie zdjęcie</h2>
    <div id="latest-container" class="mb-4">
        <img id="latest-img" class="current-img" src="" alt="Brak zdjęcia">
        <div id="latest-label" class="mt-2 fw-bold"></div>
    </div>

    <h2>Ostatnie złe zdjęcia</h2>
    <div id="bad-container" class="d-flex flex-wrap"></div>

    <script>
        function updateImages() {
            fetch("/api/images")
                .then(response => response.json())
                .then(data => {
                    const latestImg = document.getElementById("latest-img");
                    const latestLabel = document.getElementById("latest-label");
                    if (data.latest) {
                        latestImg.src = `/static/bad/${data.latest.category}/${data.latest.filename}?t=${Date.now()}`;
                        latestLabel.innerText = `Kategoria: ${data.latest.category}`;
                    }

                    const badContainer = document.getElementById("bad-container");
                    badContainer.innerHTML = "";

                    data.bad.forEach(item => {
                        const div = document.createElement("div");
                        div.classList.add("text-center");

                        const img = document.createElement("img");
                        img.src = `/static/bad/${item.category}/${item.filename}?t=${Date.now()}`;
                        img.classList.add("thumbnail");
                        img.alt = item.filename;

                        const label = document.createElement("div");
                        label.innerText = item.category;

                        div.appendChild(img);
                        div.appendChild(label);
                        badContainer.appendChild(div);
                    });
                });
        }

        setInterval(updateImages, 500);
        updateImages();
    </script>
</body>
</html>
